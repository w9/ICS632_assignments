<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">

<!--  WARNING:  This <config></config> clause below
makes it so that NO COMPUTATION TIME is simulated. This is because
in this module, for pedagogic purposes, we don't want to muddy the
(simulation) waters with computational times. As a results, this
XML platform file may not be suitable for running other
simulations, unless you remove the <config></config> clause.
-->
<config>
<prop id="smpi/simulate-computation" value="0"></prop>
<prop id="smpi/running-power" value="200000000000"></prop>
</config>

<AS id="AS0" routing="Full">
  <host id="host-0.hawaii.edu" speed="200Gf"/>
  <host id="host-1.hawaii.edu" speed="200Gf"/>
  <host id="host-2.hawaii.edu" speed="200Gf"/>
  <host id="host-3.hawaii.edu" speed="200Gf"/>
  <host id="host-4.hawaii.edu" speed="200Gf"/>
  <link id="link-0" latency="10us" bandwidth="10Gbps"/>
  <link id="link-1" latency="10us" bandwidth="10Gbps"/>
  <link id="link-2" latency="10us" bandwidth="10Gbps"/>
  <link id="link-3" latency="10us" bandwidth="10Gbps"/>
  <link id="link-4" latency="10us" bandwidth="10Gbps"/>
  <route src="host-0.hawaii.edu" dst="host-1.hawaii.edu">
	<link_ctn id="link-0"/>
  </route>
  <route src="host-0.hawaii.edu" dst="host-2.hawaii.edu">
	<link_ctn id="link-0"/>
	<link_ctn id="link-1"/>
  </route>
  <route src="host-0.hawaii.edu" dst="host-3.hawaii.edu">
	<link_ctn id="link-0"/>
	<link_ctn id="link-1"/>
	<link_ctn id="link-2"/>
  </route>
  <route src="host-0.hawaii.edu" dst="host-4.hawaii.edu">
	<link_ctn id="link-0"/>
	<link_ctn id="link-1"/>
	<link_ctn id="link-2"/>
	<link_ctn id="link-3"/>
  </route>
  <route src="host-1.hawaii.edu" dst="host-2.hawaii.edu">
	<link_ctn id="link-1"/>
  </route>
  <route src="host-1.hawaii.edu" dst="host-3.hawaii.edu">
	<link_ctn id="link-1"/>
	<link_ctn id="link-2"/>
  </route>
  <route src="host-1.hawaii.edu" dst="host-4.hawaii.edu">
	<link_ctn id="link-1"/>
	<link_ctn id="link-2"/>
	<link_ctn id="link-3"/>
  </route>
  <route src="host-2.hawaii.edu" dst="host-3.hawaii.edu">
	<link_ctn id="link-2"/>
  </route>
  <route src="host-2.hawaii.edu" dst="host-4.hawaii.edu">
	<link_ctn id="link-2"/>
	<link_ctn id="link-3"/>
  </route>
  <route src="host-3.hawaii.edu" dst="host-4.hawaii.edu">
	<link_ctn id="link-3"/>
  </route>
</AS>
</platform>
